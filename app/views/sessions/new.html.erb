<%= stylesheet_link_tag "signin"%>
<header class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
  <img src="https://brandbooki.ru/wp-content/uploads/2016/08/logo_cafe.jpg">
  <p class="h5 my-0 me-md-auto fw-normal" id="title"><b>Кондитерская «Глазурь»</b></p>
  <a class="btn btn-outline-primary" id="Button" href="/signin"><%= label_tag t('pages.login') %></a>
  <a class="btn btn-outline-primary" id="Button" href="/signup"><%= label_tag t('pages.signup') %></a>
</header>
<div class="container">
  <% if !@notice.nil? %>
    <p id="notice"><%= notice %></p>
  <% end %>
  <%= form_for(:session, :url => sessions_path) do |f| %>
    <% if !@title.nil? %>
        <div class="alert alert-danger">
          <%= @title %>
        </div>
    <% end %>
    <div class="field">
      <%= f.label t('activerecord.attributes.user.email') %><br />
      <%= f.text_field (:email), ({:class => 'form-control'}) %>
    </div>
    <div class="field">
      <%= f.label t('activerecord.attributes.user.password') %><br />
      <%= f.password_field (:password), ({:class => 'form-control'})%>
    </div>
    <div class="actions">
      <%= f.submit t('pages.login'), ({:class => 'btn btn-outline-primary'}) %>
    </div>
  <% end %>
</div>

