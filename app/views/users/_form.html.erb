<%= stylesheet_link_tag "signup" %>
  <body>
    <header class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
      <img src="https://brandbooki.ru/wp-content/uploads/2016/08/logo_cafe.jpg">
     <p class="h5 my-0 me-md-auto fw-normal" id="title"><b><%= t('mainname')%></b></p>
      <a class="btn btn-outline-primary" id="Button" href="/signin"><%= label_tag t('pages.login') %></a>
      <a class="btn btn-outline-primary" id="Button" href="/signup"><%= label_tag t('pages.signup') %></a>
    </header>
    <div class="container">
      <%= form_with(model: user, local: true) do |form| %>
          <% if user.errors.any? %>
              <div class="alert alert-danger">
                <span>Не должно быть пустых полей</span>
              </div>
          <% end %>
          <div class="field">
            <%= form.label :email %>
            <%= form.text_field :email, ({:class => 'form-control'}) %>
          </div>

          <div class="field">
            <%= form.label :password %>
            <%= form.password_field :password, ({:class => 'form-control'}) %>
          </div>

          <div class="field">
            <%= form.label :password_confirmation %>
            <%= form.password_field :password_confirmation, ({:class => 'form-control'}) %>
          </div>

          <div class="field">
            <%= form.label :name %>
            <%= form.text_field :name, ({:class => 'form-control'})%>
          </div>

          <div class="field">
            <%= form.label :age %>
            <%= form.number_field :age, ({:class => 'form-control'}) %>
          </div>

          <div class="field">
            <%= form.label :town %>
            <%= form.text_field :town, ({:class => 'form-control'}) %>
          </div>

          <div class="field">
            <%= form.label :group %>
            <%= form.text_field :group, ({:class => 'form-control'}) %>
          </div>

          <div class="actions">
            <%= form.submit t('activerecord.attributes.post.create'), :class => 'btn btn-outline-success' %>
          </div>
      <% end %>
    </div>
  </body>