<%= stylesheet_link_tag "profile"%>
<header class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
  <img src="https://brandbooki.ru/wp-content/uploads/2016/08/logo_cafe.jpg">
  <p class="h5 my-0 me-md-auto fw-normal" id="title"><b><%= t('mainname')%></b></p>
  <nav class="my-2 my-md-0 me-md-3 mx-5">
    <span class="p-2 text-dark" ><%= link_to t('pages.news'), posts_path%></span>
    <span class="p-2 text-dark" ><%= link_to t('pages.add'), new_post_path%></span>
    <span class="p-2 text-dark" ><%= link_to t('pages.my_posts'), posts_my_posts_path%></span>
    <span class="p-2 text-dark" ><%= link_to t('pages.my_profile'), @_current_user%></span>
    <span class="badge<%= " bg-warning" if I18n.locale == :ru %>"><%= link_to 'Ру', {locale: :ru} %></span>
    <span class="badge<%= " bg-warning" if I18n.locale == :en %>"><%= link_to 'En', {locale: :en} %></span>
  </nav>
  <a class="btn btn-outline-primary" id="pageLogBtn" href="/signout"><%= label_tag t('pages.logout') %></a>
</header>
<div class="container">
  <% if @user.id == @profile_id %>
    <h1><%= label_tag t('pages.my_profile') %></h1>
  <% else %>
    <h1><%= label_tag t('profile.profile') %></h1>
  <% end %>
  <div class="profile_el">
    <p class="little"><%= label_tag t('profile.name') %></p>
    <span><%= @user.name %></span>
    <hr>
  </div>

  <div class="profile_el">
    <p class="little"><%= label_tag t('profile.email') %></p>
    <span><%= @user.email %></span>
    <hr>
  </div>

  <div class="profile_el">
    <p class="little"><%= label_tag t('profile.age') %></p>
    <span><%= @user.age %></span>
    <hr>
  </div>

  <div class="profile_el">
    <p class="little"><%= label_tag t('profile.town') %></p>
    <span><%= @user.town %></span>
    <hr>
  </div>

  <div class="profile_el">
    <p class="little"><%= label_tag t('profile.group') %></p>
    <span><%= @user.group %></span>
    <hr>
  </div>
  <% if @user.id == @profile_id %>
    <%= link_to t('my_posts.edit'), edit_user_path(@user), :class =>
        'btn btn-warning'%>
    <%= link_to t('my_posts.delte'), @user, method: :delete, data: { confirm: 'Вы действительно хотите удалить профиль?' },
        :class => 'btn btn-danger'%>
    <% end %>
</div>